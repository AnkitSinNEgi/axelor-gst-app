<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  <selection name="select-bank-ac-type">
  	<option value="saving">Saving</option>
  	<option value="current">Current</option>
  </selection>
  
  <grid model="com.axelor.gst.app.BankAccount" title="Bank Account" name="bank-account-grid">
  	<field name="bank"/>
  	<field name="accountNo"/>
  	<field name="ifsc"/>
  	<field name="type"/>
  	<field name="address"/>
  </grid>
  
  <form model="com.axelor.gst.app.BankAccount" title="Bank Account" name="bank-account-form" >
  	<panel>
  		<field name="bank"/>
  		<field name="accountNo"/>
  		<field name="ifsc"/>
  		<field name="type"/>
  		<field name="address" widget="text"/>
  	</panel>
  </form>
 
  
 </object-views>